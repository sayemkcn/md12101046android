        <!--android:background="@android:color/white"-->
        <!--android:text="@string/btn_see_more"-->
        <!--android:visibility="gone" />-->
        <!--</android.support.v7.widget.CardView>-->

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>

