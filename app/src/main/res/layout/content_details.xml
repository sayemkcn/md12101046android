<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="digital.edgelabs.bdbnnewsedgelabs.DetailsActivity"
    tools:showIn="@layout/activity_details">

    <ImageView
        android:id="@+id/newsDetailsImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/newsSourceIconTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/newsTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News Title"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/newsSourceNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newsAuthorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stuff Correspondent" />

            <TextView
                android:id="@+id/newsTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*6 Hours before" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/newsDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:text="The command below will open a Secure Shell (SSH) session to your application on most operating systems. See our SSH help page for information about connecting with Windows, Mac, and Linux computers." />
</LinearLayout>
